<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#e5e5e5"
		android:gravity="center_horizontal"
		android:orientation="horizontal"
		android:padding="15dp">

		<ImageView
			android:id="@+id/sample_iv"
			android:layout_width="80dp"
			android:layout_height="40dp"
			android:background="@color/red"/>

		<TextView
			android:id="@+id/vs_tv"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_gravity="center_vertical"
			android:gravity="center"
			android:paddingLeft="15dp"
			android:paddingRight="15dp"
			android:text="vs"
			android:textColor="@color/black"
			android:textSize="20sp"/>

		<ImageView
			android:id="@+id/source_iv"
			android:layout_width="80dp"
			android:layout_height="40dp"
			android:background="@color/red"/>


	</LinearLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:background="#d0e0e2">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="15dp"
			android:background="@color/white"
			android:padding="8dp"
			android:text="5856"
			android:textSize="16sp"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:background="@color/cardview_dark_background"
			android:src="@drawable/lena"/>


		<TextView
			android:id="@+id/textView"
			android:layout_width="120dp"
			android:layout_height="60dp"
			android:layout_gravity="bottom"
			android:layout_margin="15dp"
			android:background="@color/white"
			android:padding="8dp"
			android:textSize="16sp"/>

		<com.sundae.zl.openandroid.fragment.similarPic.RectView
			android:id="@+id/rect_view"
			android:layout_width="80dp"
			android:layout_height="40dp"
			android:layout_gravity="center"/>

		<ImageView
			android:layout_width="80dp"
			android:layout_height="40dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="60dp"
			android:background="@color/red"
			android:src="@drawable/normal"/>

		<ImageView
			android:layout_width="80dp"

			android:layout_height="40dp"
			android:layout_marginLeft="15dp"

			android:layout_marginTop="110dp"
			android:background="@color/red"
			android:src="@drawable/blank"/>

		<ImageView
			android:layout_width="80dp"

			android:layout_height="40dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="160dp"
			android:background="@color/red"
			android:src="@drawable/norml2"/>

		<ImageView
			android:layout_width="80dp"

			android:layout_height="40dp"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="210dp"
			android:background="@color/red"
			android:src="@drawable/blank2"/>
	</FrameLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/cor_tv"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:text="坐标"
			android:textSize="18sp"/>

		<Button
			android:id="@+id/capture_btn"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:text="截取bitmap"/>

		<TextView
			android:id="@+id/result_tv"
			android:layout_width="100dp"
			android:layout_height="match_parent"
			android:gravity="center"
			android:text="比较结果"/>


	</LinearLayout>
</LinearLayout>