<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.sundae.zl.openandroid.activity.HomeActivity">

	<android.support.v4.widget.NestedScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<Button
				android:id="@+id/swapAdapter"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="demo for swapAdapter"
				android:textAllCaps="false"/>

			<Button
				android:id="@+id/webViewAndJs"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="webView And Js"
				android:textAllCaps="false"/>

			<Button
				android:id="@+id/multiTypeDemo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:text="recyclerView multiType"
				android:textAllCaps="false"/>
		</LinearLayout>


	</android.support.v4.widget.NestedScrollView>

</FrameLayout>
