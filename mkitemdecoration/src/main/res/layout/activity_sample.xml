<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#e5e5e5"
	android:orientation="vertical"
	tools:context="com.sundae.zl.mkitemdecoration.SampleActivity">

	<LinearLayout
		android:visibility="gone"
		android:id="@+id/text_control"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/left"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="align_left"/>

		<Button
			android:id="@+id/middle_btn"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="align_middle"/>

		<Button
			android:id="@+id/right"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="align_right"/>
	</LinearLayout>

	<android.support.v7.widget.RecyclerView
		android:id="@+id/sample_rv"
		android:layout_margin="15dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"

		android:background="#fffeee"/>
</LinearLayout>
